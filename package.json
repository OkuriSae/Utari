{
  "name": "functions",
  "scripts": {
    "eslint": "eslint --ext .js,.ts,.jsx,.tsx src/**/*",
    "eslint:fix": "eslint --ext .js,.ts,.jsx,.tsx src/**/* --fix",
    "prettier": "prettier --check src/**/*",
    "prettier:fix": "prettier --write src/**/*",
    "lint": "run-p eslint prettier",
    "lint:fix": "run-s prettier:fix eslint:fix",
    "build:client": "webpack --config ./config/webpack.config.client.js --mode development",
    "build:server": "webpack --config ./config/webpack.config.server.js --mode development",
    "build": "npm run build:client && npm run build:server",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "start:local": "npm run build && firebase emulators:start",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test": "run-p lint"
  },
  "engines": {
    "node": "14"
  },
  "main": "dist/app.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "firebase-functions-test": "^0.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.4.0",
    "svelte": "^3.42.4",
    "svelte-loader": "^3.1.2",
    "ts-loader": "^9.2.5",
    "typescript": "^3.8.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "private": true,
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx,svelte}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
